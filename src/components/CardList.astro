---
import {urlFor} from '../lib/sanity.ts'
import '../styles/CardList.css'
export type card = {
    headline: string,
    subheadline: string,
    text: string,
    cardLink: string,
    image?: string,
    video?: string
}

export type cardList = {
    headline: string,
    cards: card[]
}

const {
    headline,
    cards = []
}=Astro.props as cardList
---

<section class="cardList">
    <h2 class="text">{headline}</h2>
    <div class="cardsGrid">
        {cards.map((carditem : card) => {
            return(
                    <article class="card">
                        <h3 class="text">{carditem.headline}</h3>
                        <h4 class="text">{carditem.subheadline}</h4>
                        {carditem.image &&
                                <a href={carditem.cardLink}>
                                    <img src={urlFor(carditem.image)}  alt={headline} class="img" />
                                </a>
                        }
                        {carditem.video &&
                                <a href="">
                                    <video src={urlFor(carditem.video)} controls/>
                                </a>
                        }
                        <p class="text">{carditem.text}</p>
                    </article>)
        })}
    </div>
</section>