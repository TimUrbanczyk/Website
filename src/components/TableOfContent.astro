---
import "../styles/TableOfContent.css"
type link = {
    linkText: string,
    sectionId: string
}

type tocLinkList = {
    headline: string,
    contents: string[]
}

const {
    headline,
    contents = []
}=Astro.props
---
<div class="tocWrapper">
    <div class="tableOfContent">
        <h3 class="text" id="headlineToc">{headline}</h3>
        <div class="inner">
            {contents.map((link: link) => {
                return(
                    <div class="tocItem">
                        <a class="text" id="textToc" href={`#${link.sectionId}`}>{link.linkText}</a>
                    </div>
                )
            })}
        </div>
    </div>
</div>