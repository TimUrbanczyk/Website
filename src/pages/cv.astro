---
import "../styles/page.css"

import Navbar from "../components/Navbar.astro";
import Socials from "../components/Socials.astro";
import {client} from "../lib/sanity";
import CVList from "../components/CVList.astro";

const socialsData = await client.fetch(`*[_type == "socialList"][0]{
  socials[]{
    socialLink,
    socialIcon
  }
}`)

const navbarData = await client.fetch(`*[_type == "navbar"][0]{
	navbarHeadline,
	navbarItems[]{
		itemText,
		itemLink
	}
}`)

const cvListData = await client.fetch(`*[_type == "cvList"][0]{
    cvItemList[]{
        headline,
        date,
        text
    }
}`)
---

<style>

</style>

<html>
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"/>
</head>
<body>
<div class="global-background"></div>
<main>
    <slot>
        <Navbar {...navbarData}/>
        <CVList {...cvListData}/>
        <Socials {...socialsData}/>
    </slot>
</main>
</body>
</html>