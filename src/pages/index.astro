---
import Welcome from '../components/Welcome.astro';
import Layout from '../layouts/Layout.astro';
import CardList from "../components/CardList.astro";
import Socials from "../components/Socials.astro"
import {client} from "../lib/sanity";

const cardListData = await client.fetch(`*[_type == "cardList"][0]{
    headline,
    cards[]{
        headline,
        sublheadline,
        text,
        image,
        video
    }
}`);

const welcomeData = await client.fetch(`*[_type == "welcome"][0]{
	headline,
	subHeadline,
	image
}`);

const socialsData = await client.fetch(`*[_type == "socialList"][0]{
  socials[]{
    socialLink,
    socialIcon
  }
}`)


---
<html>
	<head>
		<meta charset="UTF-8"/>
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"/>
	</head>
	<body>
		<div class="global-background"></div>
		<main>
			<slot>
				<Welcome {...welcomeData}/>
				<CardList {...cardListData}/>
				<Socials {...socialsData}/>
			</slot>
		</main>
	</body>
</html>

<style>
	.global-background {
		position: fixed;
		inset: 0;
		z-index: -1;
		background: linear-gradient(135deg, #005c97, #363795, #4ca1af, #00c6ff);
		background-size: cover;
		background-attachment: fixed;
		}
</style>
