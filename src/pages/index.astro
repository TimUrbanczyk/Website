---
import Welcome from '../components/Welcome.astro';
import "../styles/page.css"
import Socials from "../components/Socials.astro"
import Navbar  from '../components/Navbar.astro';
import {client, urlFor} from "../lib/sanity";
import CardList from "../components/CardList.astro";


const welcomeData = await client.fetch(`*[_type == "welcome"][0]{
	headline,
	subHeadline,
	image
}`);

const socialsData = await client.fetch(`*[_type == "socialList"][0]{
  socials[]{
    socialLink,
    socialIcon
  }
}`)

const navbarData = await client.fetch(`*[_type == "navbar"][0]{
	navbarHeadline,
	navbarItems[]{
		itemText,
		itemLink
	}
}`)

const cardListData = await client.fetch(`*[_type == "cardList"][0]{
    headline,
    cards[]{
        headline,
        subHeadline,
        text,
        cardLink,
        image,
        video
    }
}`)





---
<html>
	<head>
		<meta charset="UTF-8"/>
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"/>
	</head>
	<body>
		<div class="global-background"></div>
		<main>
			<slot>
				<Navbar {...navbarData} />
				<Welcome {...welcomeData}/>
                <div id="technologies"><CardList {...cardListData} /></div>
				<Socials {...socialsData}/>
			</slot>
		</main>
	</body>
</html>



